assets:
  - type: model
    path: assets/models/Building/buildingv1.gltf
  - type: model
    path: assets/models/Knife/knife.gltf
  - type: model
    path: assets/models/NPC/NPC.gltf
  - type: font
    path: assets/fonts/arial.ttf
  - type: map
    path: assets/maps/terrain.jpg
  - type: model
    path: assets/models/Knife/knife.dae

  - type: script
    path: assets/scripts/move.lua
  - type: script
    path: assets/scripts/coreLoop.lua
  - type: script
    path: assets/scripts/player.lua
  - type: script
    path: assets/scripts/patrol.lua
  - type: script
    path: assets/scripts/supplies.lua

  - type: shader
    path: assets/shaders/simple.shader
  - type: shader
    path: assets/shaders/terrain.shader
  - type: shader
    path: assets/shaders/animation.shader
  - type: shader
    path: assets/shaders/skybox.shader
  - type: shader
    path: assets/shaders/font.shader
  - type: shader
    path: assets/shaders/water.shader

  - type: texture
    path: assets/maps/dirt.jpg
  - type: texture
    path: assets/maps/grass.jpg
  - type: texture
    path: assets/maps/rock.jpg
  - type: texture
    path: assets/textures/Water/waterDUDV.png
  - type: texture
    path: assets/textures/Water/NormalMap.png

entities:
  - TagComponent:
      tag: Runtime
    ScriptableComponent:
      script: coreLoop.lua
    TextComponent:
      position: [ 20.0, 20.0 ]
      scale: 1.0
      colour: [ 1.0, 1.0, 1.0 ]
      shader: font.shader
      font: arial.ttf
      text: ""

  - TagComponent:
      tag: Water
    TransformComponent:
      translation: [ 0.0, -117.5, 0.0 ]
      orientation: [ 0.0, 0.0, 0.0 ]
      scale: [ 10000.0, 0.0, 10000.0 ]
    WaterComponent:
      active: true
      shader: water.shader
      dudv: waterDUDV.png
      normal: NormalMap.png

  - TagComponent:
      tag: Terrain
    TransformComponent:
      translation: [ 0.0, -100.0, 0.0 ]
      orientation: [ 0.0, 0.0, 0.0 ]
      scale: [ 3000.0, 250.0, 3000.0 ]
    TerrainComponent:
      active: true
      terrain: terrain.jpg
      shader: terrain.shader
      textures:
        - texture: grass.jpg
          range: 0.1
        - texture: dirt.jpg
          range: 0.5
        - texture: rock.jpg
          range: 1.0
    RigidBodyComponent:
      mass: 1
      gravity: false
      type: static
    HeightMapColliderComponent:
      isTrigger: false

  - TagComponent:
      tag: Skybox
    SkyboxComponent:
        active: true
        shader: skybox.shader
        texturePaths:
          - assets/textures/skybox/right.jpg
          - assets/textures/skybox/left.jpg
          - assets/textures/skybox/top.jpg
          - assets/textures/skybox/bottom.jpg
          - assets/textures/skybox/front.jpg
          - assets/textures/skybox/back.jpg

  - TagComponent:
      tag: Player
    TransformComponent:
      translation: [ 0.0, 2.0, 0.0 ]
      orientation: [ 0.0, 0.0, 0.0 ]
      scale: [ 1.0, 1.0, 1.0 ]
    ScriptableComponent:
      script: player.lua
    CameraComponent:
      camera:
        fov: 45.0
        aspect: 1.7777777779
        nearPlane: 0.1
        farPlane: 5000.0
    PlayerControllerComponent:
      radius: 2.5
      height: 13.0
      speed: 40.0
      moveDrag: 15.0
      fallDrag: 5.0
    SkinnedRenderableComponent:
      active: true
      model: knife.gltf
      shader: animation.shader
      startAnimation: knife.gltf/knife_idle

  - TagComponent:
      tag: Teacher
    TransformComponent:
      translation: [ 150.0, 0.0, 75.0 ]
      orientation: [ 0.0, 270.0, 0.0 ]
      scale: [ 3.5, 3.5, 3.5 ]
    SkinnedRenderableComponent:
      active: true
      model: NPC.gltf
      shader: animation.shader
      startAnimation: NPC.gltf/walk
    PlayerControllerComponent:
      radius: 1.5
      height: 4.0
      speed: 7.5
      moveDrag: 7.0
      fallDrag: 5.0

  - TagComponent:
      tag: Building
    TransformComponent:
      translation: [ 0.0, 15.0, 0.0 ]
      orientation: [ 0.0, 0.0, 0.0 ]
      scale: [ 13.0, 13.0, 13.0 ]
    RenderableComponent:
      active: true
      model: buildingv1.gltf
      shader: simple.shader

  - TagComponent:
      tag: floor
    TransformComponent:
      translation: [ 0.0, 0.0, 0.0 ]
      orientation: [ 0.0, 0.0, 0.0 ]
      scale: [ 15.0, 15.0, 15.0 ]
    BoxColliderComponent:
      isTrigger: false
      size: [ 100.0, 1.0, 100.0 ]