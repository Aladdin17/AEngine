    path: assets/maps/dirt.jpg
  - type: texture
    path: assets/maps/grass.jpg
  - type: texture
    path: assets/maps/rock.jpg
  - type: texture
    path: assets/textures/Water/waterDUDV.png
  - type: texture
    path: assets/textures/Water/NormalMap.png

entities:
  - TagComponent:
      tag: Runtime
    ScriptableComponent:
      script: coreLoop.lua
    TextComponent:
      position: [ 20.0, 20.0 ]
      scale: 1.0
      colour: [ 1.0, 1.0, 1.0 ]
      shader: font.shader
      font: arial.ttf
      text: ""

  - TagComponent:
      tag: Water
    TransformComponent:
      translation: [ 0.0, -117.5, 0.0 ]
      orientation: [ 0.0, 0.0, 0.0 ]
      scale: [ 10000.0, 0.0, 10000.0 ]
    WaterComponent:
      active: true
      shader: water.shader
      dudv: waterDUDV.png
      normal: NormalMap.png

  - TagComponent:
      tag: Terrain
    TransformComponent:
      translation: [ 0.0, -100.0, 0.0 ]
      orientation: [ 0.0, 0.0, 0.0 ]
      scale: [ 3000.0, 250.0, 3000.0 ]
    TerrainComponent:
      active: true
      terrain: terrain.jpg
      shader: terrain.shader
      textures:
        - texture: grass.jpg
          range: 0.1
        - texture: dirt.jpg
          range: 0.5
        - texture: rock.jpg
          range: 1.0
    RigidBodyComponent:
      mass: 1
      gravity: false
      type: static
    HeightMapColliderComponent:
      isTrigger: false

  - TagComponent:
      tag: Skybox
    SkyboxComponent:
        active: true
        shader: skybox.shader
        texturePaths:
          - assets/textures/skybox/right.jpg
          - assets/textures/skybox/left.jpg
          - assets/textures/skybox/top.jpg
          - assets/textures/skybox/bottom.jpg
          - assets/textures/skybox/front.jpg
          - assets/textures/skybox/back.jpg

  - TagComponent:
      tag: Player
    TransformComponent:
      translation: [ 625.0, 2.0, 75.0 ]
      orientation: [ 0.0, 0.0, 0.0 ]
      scale: [ 1.0, 1.0, 1.0 ]
    ScriptableComponent:
      script: player.lua
    CameraComponent:
      camera:
        fov: 45.0
        aspect: 1.7777777779
        nearPlane: 0.1
        farPlane: 5000.0
    PlayerControllerComponent:
      radius: 2.5
      height: 16.0
      speed: 40.0
      moveDrag: 15.0
      fallDrag: 5.0

  - TagComponent:
