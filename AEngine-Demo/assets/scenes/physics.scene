assets:
  - type: shader
    path: assets/shaders/simple.shader
  - type: shader
    path: assets/shaders/skybox.shader
  - type: model
    path: assets/models/Box/box.gltf
  - type: model
    path: assets/models/Sphere/sphere.gltf
  - type: script
    path: assets/scripts/projectile.lua

entities:
  - TagComponent:
      tag: Skybox
    SkyboxComponent:
        active: true
        shader: skybox.shader
        texturePaths:
          - assets/textures/skybox/right.jpg
          - assets/textures/skybox/left.jpg
          - assets/textures/skybox/top.jpg
          - assets/textures/skybox/bottom.jpg
          - assets/textures/skybox/front.jpg
          - assets/textures/skybox/back.jpg
  - TagComponent:
      tag: Box1
    TransformComponent:
      translation: [ 0.0, 0.0, -30.0 ]
      orientation: [ 0.0, 0.0, 0.0 ]
      scale: [ 20.0, 30.0, 3.0 ]
    RenderableComponent:
      active: true
      model: box.gltf
      shader: simple.shader
    RigidBodyComponent:
      type: dynamic
      massKg: 2.0
      restitution: 0.5
      hasGravity: false
      linearDamping: 0.2
      angularDamping: 0.2
      colliders:
        - type: Box
          orientation: [ 0.0, 0.0, 0.0 ]
          offset: [ 0.0, 0.0, 0.0 ]
          halfExtents: [ 10.0, 15.0, 1.5 ]
  - TagComponent:
      tag: Box2
    TransformComponent:
      translation: [ 0.0, 0.0, -35.0 ]
      orientation: [ 1.0, 0.0, 0.0 ]
      scale: [ 20.0, 30.0, 3.0 ]
    RenderableComponent:
      active: true
      model: box.gltf
      shader: simple.shader
    RigidBodyComponent:
      type: dynamic
      massKg: 2.0
      restitution: 0.5
      linearDamping: 0.2
      angularDamping: 0.2
      hasGravity: true
      colliders:
        - type: Box
          orientation: [ 0.0, 0.0, 0.0 ]
          offset: [ 0.0, 0.0, 0.0 ]
          halfExtents: [ 10.0, 15.0, 1.5 ]

  - TagComponent:
      tag: Floor
    TransformComponent:
      translation: [ 0.0, -50.0, -30.0 ]
      orientation: [ 0.0, 0.0, 0.0 ]
      scale: [ 1000.0, 2.5, 1000.0 ]
    RenderableComponent:
      active: true
      model: box.gltf
      shader: simple.shader
    RigidBodyComponent:
      type: static
      massKg: 10000
      restitution: 0.5
      linearDamping: 0.2
      angularDamping: 0.2
      hasGravity: false
      colliders:
        - type: Box
          orientation: [ 0.0, 0.0, 0.0 ]
          offset: [ 0.0, 0.0, 0.0 ]
          halfExtents: [ 500.0, 1.50, 500.0 ]
