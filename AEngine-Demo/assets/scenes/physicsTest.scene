scene: "Physics Test Scene"
assets:
  - type: model
    path: assets/models/box/box.obj
  - type: shader
    path: assets/shaders/simple.shader
  - type: script
    path: assets/scripts/player.lua
  - type: script
    path: assets/scripts/coreLoop.lua

entities:
  - TagComponent:
      tag: Runtime
    ScriptableComponent:
      script: coreLoop.lua
  - TagComponent:
      tag: Player
    TransformComponent:
      translation: [ 0.0, 50.0, 0.0 ]
      orientation: [ 0.0, 0.0, 0.0 ]
      scale: [ 1.0, 1.0, 1.0 ]
    ScriptableComponent:
      script: player.lua
    CameraComponent:
      camera:
        fov: 45.0
        aspect: 1.7777777779
        nearPlane: 1.0
        farPlane: 500.0
    PlayerControllerComponent:
      radius: 0.5
      height: 1.8
      speed: 10.50
      moveDrag: 7.0
      fallDrag: 5.0

  - TagComponent:
      tag: Floor
    TransformComponent:
      translation: [ 0.0, 0.0, 0.0 ]
      orientation: [ 0.0, 0.0, 0.0 ]
      scale: [ 100.0, 5.0, 100.0 ]
    RenderableComponent:
      active: true
      model: box.obj
      shader: simple.shader
    RigidBodyComponent:
      mass: 0.0
      gravity: false
      type: kinematic
    BoxColliderComponent:
      trigger: false
      size: [ 100.0, 5.0, 100.0 ]
